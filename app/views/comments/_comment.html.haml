.well
  .row
    .col-sm-8.col-md.8.col-xs-8
      %p= comment.body
      %p Created on #{formatted_date(comment.created_at)}
    .col-sm-8.col-md.8.col-xs-8
      .pull-right= button_to "Delete", idea_comment_path(@idea, comment), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this comment?"}
